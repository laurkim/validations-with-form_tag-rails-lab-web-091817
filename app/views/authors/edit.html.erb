<h1>Edit an Author</h1>

<% if @author.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors: </h2>
    <ul>
      <% @author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag author_path(@author) do %>
  <div class="field <%= 'field_with_errors' if @author.errors[:name].any? %>'">
    <label>Author Name: </label><br>
    <%= text_field_tag "name", @author.name %><br>
  </div>

  <div class="field <%= 'field_with_errors' if @author.errors[:email].any? %>">
    <label>Author Email: </label><br>
    <%= text_field_tag "email", @author.email %><br>
  </div>

  <div class="field <%= 'field_with_errors' if @author.errors[:phone_number].any? %>">  
    <label>Author Phone Number: </label><br>
    <%= text_field_tag "phone_number", @author.phone_number %><br>
  </div>

  <%= submit_tag "Update Author" %>
<% end %>
